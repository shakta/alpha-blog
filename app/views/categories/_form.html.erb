<%= render 'shared/errors', obj: @category %>

<%= form_for(@category, :html => {class: "form-horisontal", role: "form"}) do |f| %>
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :name %>
      </div>
      <div class="col-sm-8">
        <%= f.text_field :name, class: "form-control", placeholder: "Category name", autofocus: true %>
      </div>
    </div>
  <br>
  <br>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10", style="margin-top:8px">
      <%= f.submit class: 'btn btn-primary btn-lg' %>
    </div>
  </div>
  <% end %>
  <div class="col-xs-4 col-xs-offset-4", style="margin-top:15px">
    [ <%= link_to "Cancel and back to articles list", articles_path %> ]
  </div>
